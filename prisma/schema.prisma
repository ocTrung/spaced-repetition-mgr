generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model reviewItem {
  id           Int      @id @default(autoincrement())
  title        String
  startDate    DateTime @default(now())
  lastReviewed DateTime @default(now())
  EF           Float    @default(2.5)
  intervals    Int[]
}

